<Window x:Class="KPO_1.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPO_1"
        mc:Ignorable="d"
        Title="Калькулятор" Height="596" Width="516">
    <Grid x:Name="MainRoot" Background="white" >
        <Grid.RowDefinitions>
            <RowDefinition Height="87*" />
            <RowDefinition Height="63*" />
            <RowDefinition Height="61*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*" />
            <ColumnDefinition Width="130*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="124*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="ResultLabel" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" FontSize="40" FontFamily="Arial Black" />
        <Button Grid.Column="1" Grid.Row="6" FontSize="20" FontFamily="Arial Black">0</Button>
        <Button Grid.Column="0" Grid.Row="5" FontSize="20" FontFamily="Arial Black">1</Button>
        <Button Grid.Column="1" Grid.Row="5" FontSize="20" FontFamily="Arial Black">2</Button>
        <Button Grid.Column="2" Grid.Row="5" FontSize="20" FontFamily="Arial Black">3</Button>
        <Button Grid.Column="0" Grid.Row="4" FontSize="20" FontFamily="Arial Black">4</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="20" FontFamily="Arial Black">5</Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="20" FontFamily="Arial Black">6</Button>
        <Button Grid.Column="0" Grid.Row="3" FontSize="20" FontFamily="Arial Black">7</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="20" FontFamily="Arial Black">8</Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="20" FontFamily="Arial Black">9</Button>
        <Button Grid.Column="0" Grid.Row="6" FontSize="20" FontFamily="Arial Black">,</Button>
        <Button Grid.Column="2" Grid.Row="6" FontSize="20" FontFamily="Arial Black">CE</Button>
        <Button Grid.Column="3" Grid.Row="6" FontSize="20" FontFamily="Arial Black">=</Button>
        <Button Grid.Column="3" Grid.Row="5" FontSize="20" FontFamily="Arial Black">+</Button>
        <Button Grid.Column="3" Grid.Row="4" FontSize="20" FontFamily="Arial Black">-</Button>
        <Button Grid.Column="3" Grid.Row="3" FontSize="20" FontFamily="Arial Black">*</Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="20" FontFamily="Arial Black">/</Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="20" FontFamily="Arial Black">del</Button>
    </Grid>
</Window>
